<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:paddingBottom="@dimen/dimen_16dp"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<androidx.cardview.widget.CardView
		android:id="@+id/cvImageNewProduct"
		android:layout_width="160dp"
		android:layout_height="200dp"
		android:layout_margin="6dp"
		app:cardBackgroundColor="#ff9800"
		app:cardCornerRadius="8dp"
		app:cardElevation="4dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/ivImageNewProduct"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />

	</androidx.cardview.widget.CardView>

	<!-- TITLE -->
	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/tv_title"
		style="@style/ProductOfferTitleText"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="12dp"
		app:layout_constraintEnd_toEndOf="@id/cvImageNewProduct"
		app:layout_constraintStart_toStartOf="@id/cvImageNewProduct"
		app:layout_constraintTop_toBottomOf="@id/cvImageNewProduct"
		android:text="Title" />

	<!-- SUBTITLE -->
	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/tv_subtitle"
		style="@style/ProductOfferSubtitleText"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="@id/tv_title"
		app:layout_constraintTop_toBottomOf="@id/tv_title"
		android:text="Subitle" />


</androidx.constraintlayout.widget.ConstraintLayout>