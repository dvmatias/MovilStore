<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<!-- STATUS -->
	<androidx.appcompat.widget.AppCompatTextView
		android:id="@+id/tvStatus"
		style="@style/ProductDetailStatus"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:padding="@dimen/dimen_16dp"
		android:drawablePadding="@dimen/dimen_8dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:gravity="center_vertical"
		android:visibility="gone"
		android:drawableStart="@drawable/ic_warning_black_24dp"
		tools:text="This product is paused"
		tools:visibility="visible"/>

	<!-- SECTION 1 -->
	<include
		android:id="@+id/section_1"
		layout="@layout/product_detail_section_1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/tvStatus" />

	<!-- SECTION 2 -->
	<include
		android:id="@+id/section_2"
		layout="@layout/product_detail_section_2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/dimen_16dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/section_1" />

	<!-- SECTION 3 -->
	<include
		android:id="@+id/section_3"
		layout="@layout/product_detail_section_3"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/dimen_16dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/section_2" />

	<!-- SECTION 4 -->
	<include
		android:id="@+id/section_4"
		layout="@layout/product_detail_section_4"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/dimen_16dp"
		android:layout_marginBottom="56dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/section_3"
		app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>