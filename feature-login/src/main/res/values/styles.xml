<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="LoginActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@color/colorLoginActivityBackground</item>
        <item name="android:statusBarColor">@color/colorTransparent</item>
    </style>

    <!-- SOCIAL NETWORK BUTTONS -->
    <style name="TextSignInSocialNetwork" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginStart">@dimen/dimen_14dp</item>
        <item name="android:fontFamily">@font/mark_bold</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="android:textColor">@color/colorSocialNetworkLabel</item>
        <item name="android:textSize">@dimen/text_14sp</item>
    </style>

    <!-- SIGN IN EDIT TEXT - INPUT FIELDS -->
    <style name="SignInEditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:padding">2dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:background">@drawable/bgr_edit_text_sign_in</item>
        <item name="android:textColorHint">@color/coloEditTextHint</item>
        <item name="android:textColor">@color/coloEditTextInput</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">100</item>
        <item name="android:autoText">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:theme">@style/SignInEditTextTheme</item>
    </style>

    <style name="SignInEditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorControlNormal">@color/colorAccent</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
    </style>

    <!-- SWITCH -->
    <style name="SignInSwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textColor">@color/colorBtnTextLabel</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:theme">@style/SignInSwitchTheme</item>
    </style>

    <style name="SignInSwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlNormal">@color/colorAccent</item>
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorSwitchThumbNormal">@color/colorWhite</item>
        <item name="android:colorForeground">#BEBEBE</item>
    </style>

    <!-- LABELS -->
    <style name="LabelTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorBtnTextLabel</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
    </style>



    <!-- SIGN UP EDIT TEXT - INPUT FIELDS -->
    <style name="SignUpEditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:padding">2dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:background">@drawable/bgr_edit_text_sign_up</item>
        <item name="android:textColorHint">@color/coloEditTextHint</item>
        <item name="android:textColor">@color/coloEditTextInput</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">100</item>
        <item name="android:autoText">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:theme">@style/SignInEditTextTheme</item>
    </style>

</resources>
