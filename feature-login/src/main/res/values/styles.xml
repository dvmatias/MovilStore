<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="LoginActivityTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@color/colorLoginActivityBackground</item>
        <item name="android:statusBarColor">@color/colorTransparent</item>
    </style>

    <style name="TextSignInSocialNetwork" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginStart">@dimen/dimen_14dp</item>
        <item name="android:fontFamily">@font/mark_bold</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@color/colorSocialNetworkLabel</item>
        <item name="android:textSize">@dimen/text_14sp</item>
    </style>

    <style name="SignInEditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:padding">2dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:background">@drawable/bgr_edit_text_sign_in</item>
        <item name="android:textColorHint">#898989</item>
        <item name="android:textColor">#F3F3F3</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">100</item>
        <item name="android:autoText">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>
