<resources>

	<!-- FLOW BUTTON -->
	<declare-styleable name="StylingFlowButton">
		<attr name="buttonColor" format="color" />
		<attr name="iconColor" format="color" />
		<attr name="buttonStatus" format="integer">
			<enum name="enabled" value="0" />
			<enum name="disabled" value="1" />
			<enum name="loading" value="2" />
		</attr>
	</declare-styleable>

	<!-- MAIN TAB LAYOUT -->
	<declare-styleable name="StylingMainTabLayout">
		<attr name="backgroundLayoutColor" format="color" />
	</declare-styleable>

</resources>
